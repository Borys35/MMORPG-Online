generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["linux-musl-openssl-3.0.x", "native"]
}

datasource db {
  provider = "postgresql"
  // url      = env("DATABASE_URL")
  url      = "postgresql://borys:secret@localhost:5432/mmorpg_postgres?schema=public"
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  hash       String
  username   String?
  createdAt  DateTime    @default(now())
  characters Character[]
}

model Character {
  id        Int      @id @default(autoincrement())
  name      String
  level     Int
  userId    Int
  createdAt DateTime @default(now())

  user       User    @relation(fields: [userId], references: [id])
  items      Item[]
  quests     Quest[]
  stats      Stats?
  gold       Int
  experience Int
  statsId    Int     @unique
}

model Stats {
  id Int @id @default(autoincrement())

  health       Int
  maxHealth    Int
  strength     Int
  dexterity    Int
  intelligence Int

  characterId Int       @unique
  character   Character @relation(fields: [characterId], references: [id])
}

model Item {
  id Int @id @default(autoincrement())

  name          String
  type          String
  requiredLevel Int
  price         Int

  characterId Int
  character   Character @relation(fields: [characterId], references: [id])

  npc   NPC? @relation(fields: [npcId], references: [id])
  npcId Int?
}

model Quest {
  id Int @id @default(autoincrement())

  name          String
  description   String
  levelRequired Int

  characterId Int
  character   Character @relation(fields: [characterId], references: [id])

  npc   NPC? @relation(fields: [npcId], references: [id])
  npcId Int?
}

model NPC {
  id Int @id @default(autoincrement())

  name     String
  location String

  quests Quest[]
  items  Item[]
}
